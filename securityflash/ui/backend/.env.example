# Pentest AI Platform - Environment Configuration Template
# Copy this file to .env and fill in your values

# Application
APP_NAME="Pentest AI Platform"
APP_VERSION="0.1.0"
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://pentest:pentest@localhost:5432/pentest_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET=CHANGE_ME_TO_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM Configuration
LLM_PROVIDER=local  # or "claude"
LLM_MODEL=meta-llama/Llama-3.1-70b-instruct
LLM_TEMPERATURE=0  # CRITICAL: Must be 0 for deterministic output
LLM_BASE_URL=http://localhost:8080/v1  # For local models

# Claude API (if LLM_PROVIDER=claude)
CLAUDE_API_KEY=sk-ant-xxxxx  # Get from https://console.anthropic.com
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# MinIO (S3-compatible storage for evidence)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=pentest-evidence
MINIO_USE_SSL=false

# Worker Runtime Configuration
WORKER_MAX_CONCURRENT=3
WORKER_ACTION_TIMEOUT=300  # seconds
WORKER_OUTPUT_MAX_BYTES=10485760  # 10MB

# Approval TTL (minutes)
APPROVAL_TTL_L2=15  # L2 actions expire after 15 minutes
APPROVAL_TTL_L3=60  # L3 actions expire after 60 minutes
